<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/r_1"
    tools:context=".Filteri">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista"
        android:layout_width="416dp"
        android:layout_height="488dp"
        android:fontFamily="@font/digitalni_font"
        android:textColor="#FFFF00"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@+id/MaxTEKST" />

    <TextView
        android:id="@+id/IMETekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:editable="false"
        android:text="IME"
        android:textSize="16dp"
        android:fontFamily="@font/digitalni_font"
        android:textColor="#FFFF00"
        app:layout_constraintBottom_toTopOf="@+id/lista"
        app:layout_constraintEnd_toStartOf="@+id/MaxTEKST"
        app:layout_constraintTop_toBottomOf="@+id/nadjiIme"
        app:layout_constraintVertical_bias="0.926" />

    <TextView
        android:id="@+id/MaxTEKST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="177dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="535dp"
        android:editable="false"
        android:fontFamily="@font/digitalni_font"
        android:textColor="#FFFF00"
        android:text="MAX"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/filterpoSkoru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="288dp"
        android:onClick="filter"
        android:fontFamily="@font/digitalni_font"
        android:textColor="#FFFF00"
        android:text="Najbolji"
        app:layout_constraintBottom_toTopOf="@+id/IMETekst"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />


    <EditText
        android:id="@+id/nadjiIme"
        android:layout_width="199dp"
        android:layout_height="46dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="15dp"
        android:ems="10"
        android:hint="Search for a name"
        android:fontFamily="@font/digitalni_font"
        android:textColor="#FFFF00"
        android:inputType="textPersonName"
        android:windowSoftInputMode="stateAlwaysHidden|adjustNothing"
        app:layout_constraintBottom_toTopOf="@+id/MaxTEKST"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.729"
        app:layout_constraintStart_toEndOf="@+id/filterpoSkoru"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.205" />

    <Button
        android:id="@+id/button7"
        android:layout_width="104dp"
        android:layout_height="52dp"
        android:text="SEARCH"
        android:fontFamily="@font/digitalni_font"
        android:textColor="#FFFF00"
        android:onClick="nadjiIme"
        app:layout_constraintBottom_toTopOf="@+id/filterpoSkoru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.701" />
    " />

</androidx.constraintlayout.widget.ConstraintLayout>