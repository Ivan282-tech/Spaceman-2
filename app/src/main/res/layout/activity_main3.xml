<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


            android:id="@+id/video_prikaz"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.example.spaceman2.FullScreenVideoView
                android:id="@+id/fullScreenVideoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="52dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/okruglo_dugme"
                android:onClick="restart"
                android:src="@drawable/restart"
                android:textAlignment="center"
                tools:ignore="SpeakableTextPresentCheck"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="52dp"
                android:layout_height="48dp"
                android:contentDescription="@string/todo"
                android:onClick="pocetna"
                android:src="@drawable/kuca"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/game_over"
                android:layout_width="273dp"
                android:layout_height="251dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="97dp"
                android:layout_marginEnd="80dp"
                android:gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/digitalni_font"
                android:textColor="#FFFF00"
                android:textSize="68sp" />
            <TextView
                android:id="@+id/score_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="300dp"
                android:fontFamily="@font/digitalni_font"
                android:textColor="#ff0000"
                android:text="SCORE: "
                android:textSize="50sp" />
            <TextView
                android:id="@+id/tekst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="45dp"
                android:layout_marginBottom="340dp"
                android:gravity="center"
                android:textColor="#ff0000"
                android:textSize="50sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/digitalni_font"
                />

            <TextView
                android:id="@+id/zapravo_skor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="200dp"
                android:layout_marginBottom="300dp"
                android:gravity="center"
                android:textColor="#ff0000"
                android:textSize="48sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/digitalni_font"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/najbolji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="300dp"
                android:layout_marginBottom="240dp"
                android:gravity="center"
                android:textColor="#ff0000"
                android:textSize="48sp"
                android:fontFamily="@font/digitalni_font"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="240dp"
                android:fontFamily="@font/digitalni_font"
                android:textColor="#ff0000"
                android:text="BEST SCORE: "
                android:textSize="50sp"
                />

            <Button
                android:id="@+id/filteri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Filters"
                android:fontFamily="@font/digitalni_font"
                android:textColor="#FFFF00"
                android:background="@android:color/transparent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="3dp"
                android:layout_marginTop="73dp"
                android:onClick="filter" />


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>