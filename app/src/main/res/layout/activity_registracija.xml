<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registracija">

    <com.example.spaceman2.FullScreenVideoView
        android:id="@+id/fullScreenVideoView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Ime"
        android:layout_width="188dp"
        android:layout_height="60dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="611dp"
        android:hint="Name"
        android:fontFamily="@font/digitalni_font"
        android:textColor="#FFFF00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Sifra"
        android:layout_width="181dp"
        android:layout_height="54dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="520dp"
        android:hint="Password"
        android:fontFamily="@font/digitalni_font"
        android:textColor="#FFFF00"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Potvrda"
        android:layout_width="182dp"
        android:layout_height="53dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="442dp"
        android:hint="Confirm password"
        android:fontFamily="@font/digitalni_font"
        android:textColor="#FFFF00"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="358dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="322dp"
        android:background="@android:color/transparent"
        android:text="ADD"
        android:fontFamily="@font/digitalni_font"
        android:textColor="#FFFF00"
        android:onClick="dodajIgraca"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>